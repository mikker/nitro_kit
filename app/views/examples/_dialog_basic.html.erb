<%= nk_dialog do |d| %>
  <%= d.trigger "New post" %>
  <%= d.dialog do %>
    <%= d.title "New post" %>
    <%= d.description "Start off your new post with a tantilizing promise that your article can't live up to." %>

    <%= nk_form_for Post.new, url: "#" do |f| %>
      <div class="grid gap-6">
        <%= f.field_group do %>
          <%= f.field :title %>
        <% end %>

        <div class="flex justify-end space-x-2">
          <%= nk_ghost_button "Cancel", data: { action: "nk--dialog#close" } %>
          <%= f.submit "Save post" %>
        </div>
      </div>
    <% end %>

    <%= d.close_button %>
  <% end %>
<% end %>
