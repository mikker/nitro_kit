  <%= nk_warning_alert do |a| %>
    <%= nk_icon :"loader-circle", class: "animate-spin" %>
    <%= a.title "Get ready" %>
    <%= a.description "Ice cream is in just a few minutesâ€¦" %>
  <% end %>

  <%= nk_success_alert do |a| %>
