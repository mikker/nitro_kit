<%= component_page do %>
  <%= title "Forms" %>

  <% @post = Post.new(title: nil).tap { |post| post.valid? } %>

  <%= example do %>
    <%= form_with model: @post, url: request.path, builder: IgnitionKit::FormBuilder, html: { class: "w-[320px]" } do |f| %>
      <%= f.fieldset do %>
        <%= f.field :title %>

        <%= tag.div(class: "flex gap-4 items-center") do %>
          <%#<%= f.field :category_id, as: :select, collection: Category.all %>
          <%#<%= f.field :public, as: :checkbox %>
          <%= f.select :category_id, [["Ruby"], ["JavaScript"]] %>
        <% end %>

        <%#<%= f.field :body %>

        <div>
          <%= f.textarea :body %>
        </div>

        <%= f.check_box :publish, label: "Publish?" %>

        <div>
          <%= f.submit %>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <h2>Labels</h2>
  <%= example do %>
    <%= label :name, "Name" %>
  <% end %>

  <h2>Text fields</h2>
  <%= example do %>
    <%= text_field_tag :name, nil %>
  <% end %>
<% end %>
