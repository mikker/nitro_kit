<%= component_page do %>
  <%= component_header do %>
    <%= title "Field" %>
    <%= lead "So many ways to input a string" %>
    <%= render NuggetsComponent.new(%i[component]) %>
  <% end %>

  <%= section do %>
    <%= section_title "Example" %>
    <%= example_file "field_basic" %>

    <%= inline_example do %>
      {%= nk_form_for :session do |f| %}
        {%= f.fieldset do |fs| %}
          {%= fs.legend "Sign in" %}
          {%= fs.description "Let's see those credentials, buddy" %}

          {%= fs.group do %}
            {%= f.field :email, as: :email, label: "E-mail address" %}
            {%= f.field :password, as: :password %}
            {%= f.field :remember_me, as: :checkbox,
              description: "At least for a little bit" %}
            {%= f.submit "Sign in" %}
          {% end %}
        {% end %}
      {% end %}
    <% end %>
  <% end %>

  <%= render "install_section", component_name: "field" %>
  <%= render "dependencies_section", component_name: "field" %>

  <%= section do %>
    <%= section_title "Usage" %>

    <%= render PropTable.new("nk_field(**attrs)") do |t| %>
      <%= t.attrs_prop(:input) %>
    <% end %>

    <%= render PropTable.new("nk_fieldset(legend: nil, description: nil, **attrs) { |fieldset| ... }") do |t| %>
      <%= t.text_prop(:legend) %>
      <%= t.text_prop(:description) %>
      <%= t.attrs_prop(:fieldset) %>
    <% end %>

    <%= render PropTable.new("fieldset.legend(text = nil, **attrs) { ... }") do |t| %>
      <%= t.text_prop %>
      <%= t.attrs_prop(:legend) %>
    <% end %>

    <%= render PropTable.new("fieldset.description(text = nil, **attrs) { ... }") do |t| %>
      <%= t.text_prop %>
      <%= t.attrs_prop(:div) %>
    <% end %>

    <%= render PropTable.new("fieldset.group(**attrs) { |group| ... }") do |t| %>
      <%= t.attrs_prop(NitroKit::FieldGroup) %>
    <% end %>

    <%= render PropTable.new("nk_field_group(**attrs)") do |t| %>
      <%= t.attrs_prop(:div) %>
    <% end %>
  <% end %>
<% end %>
