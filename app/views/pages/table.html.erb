<%= component_page do %>
  <%= component_header do %>
    <%= title "Table" %>
    <%= lead "(╯°□°)╯︵ ┻━┻" %>
    <%= render NuggetsComponent.new(%i[component]) %>
  <% end %>

  <%= section do %>
    <%= example_file "table_basic" %>

    <%= inline_example do %>
      {%= nk_table do |t| %}
        {%= t.thead do %}
          {%= t.th "Header" %}
        {% end %}
        {%= t.tbody do %}
          {%= t.tr do %}
            {%= t.td "Cell" %}
          {% end %}
        {% end %}
      {% end %}
    <% end %>
  <% end %>

  <%= render "install_section", component_name: "table" %>
  <%= render "dependencies_section", component_name: "table" %>

  <%= section do %>
    <%= section_title "Usage" %>

    <%= render PropTable.new("nk_table(**attrs) { |table| ... }") do |t| %>
      <%= t.attrs_prop(:table) %>
    <% end %>

    <%= render PropTable.new("table.thead(**attrs) { ... }") do |t| %>
      <%= t.attrs_prop(:thead) %>
    <% end %>

    <%= render PropTable.new("table.tbody(**attrs) { ... }") do |t| %>
      <%= t.attrs_prop(:tbody) %>
    <% end %>

    <%= render PropTable.new("table.tr(**attrs) { ... }") do |t| %>
      <%= t.attrs_prop(:tr) %>
    <% end %>

    <%= render PropTable.new("table.th(text = nil, **attrs) { ... }") do |t| %>
      <%= t.text_prop %>
      <%= t.attrs_prop(:th) %>
    <% end %>

    <%= render PropTable.new("table.td(text = nil, **attrs) { ... }") do |t| %>
      <%= t.text_prop %>
      <%= t.attrs_prop(:td) %>
    <% end %>
  <% end %>
<% end %>
