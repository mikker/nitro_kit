<%= component_page do %>
  <%= component_header do %>
    <%= title "Table" %>
  <% end %>

  <%= section do %>
    <%= example do %>
      <%= nk_table do |t| %>
        <%= t.thead do %>
          <%= t.th do %>
            Header 1
          <% end %>
          <%= t.th do %>
            Header 2
          <% end %>
          <%= t.th do %>
            Header 3
          <% end %>
        <% end %>
        <%= t.tbody do %>
          <% 1.upto(5) do |i| %>
            <%= t.tr do %>
              <%= t.td do %>
                Row
                <%= i %>
              <% end %>
              <%= t.td do %>
                Row
                <%= i %>
              <% end %>
              <%= t.td do %>
                Row
                <%= i %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

