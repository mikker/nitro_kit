<%= component_page do %>
  <%= title "Checkboxes" %>

  <%= section do %>
    <h2>Simple checkbox</h2>
    <%= example do %>
      <%= nk_checkbox %>
      <%= nk_checkbox checked: true %>
    <% end %>

    <%= code_example(%{<%= nk_checkbox name: "title" %\>}) %>

    <h2>Checkbox with label</h2>

    <%= example do %>
      <%= nk_checkbox label: "Accept your fate" %>
    <% end %>

    <%= code_example %{<%= nk_checkbox label: "Accept your fate" %\>} %>
  <% end %>
<% end %>
