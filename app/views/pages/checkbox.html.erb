<%= component_page do %>
  <%= title "Checkboxes" %>

  <%= section do %>
    <h2>Simple checkbox</h2>
    <%= example do %>
      <%= nk_checkbox :name_1 %>
      <%= nk_checkbox :name_2, checked: true %>
    <% end %>

    <%= code_example(%{<%= nk_checkbox "name" %\>}) %>

    <h2>Checkbox with label</h2>

    <%= example do %>
      <%= nk_checkbox "name_3", label: "Accept your fate" %>
    <% end %>

    <%= code_example %{<%= nk_checkbox "name", label: "Accept your fate" %\>} %>
  <% end %>
<% end %>
