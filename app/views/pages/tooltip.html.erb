<%= component_page do %>
  <%= component_header do %>
    <%= title "Tooltip" %>
    <%= lead "It's a secret little top hat for your elements" %>
    <%= render NuggetsComponent.new(%i[component js]) %>
  <% end %>

  <%= section do %>
    <%= section_title "Example" %>
    <%= example_file "tooltip_basic" %>

    <%= inline_example do %>
      {% # Text content %}
      {%= nk_tooltip(content: "Fill the tank") do |t| %}
        {%= nk_button icon: "fuel" %}
      {% end %}

      {% # Block content %}
      {%= nk_tooltip do |t| %}
        {%= t.content do %}
          Anything goes here
        {% end %}
        {%= nk_button icon: "fuel" %}
      {% end %}
    <% end %>
  <% end %>

  <%= render "install_section", component_name: "tooltip" %>
  <%= render "dependencies_section", component_name: "tooltip" %>

  <%= section do %>
    <%= section_title "Usage" %>

    <%= render PropTable.new("nk_tooltip(content: nil, placement: nil, **attrs) { |tooltip| ... }") do |t| %>
      <%= t.prop "content", "nil" do %>
        Text content of the tooltip
      <% end %>
      <%= t.prop "placement", "nil" do %>
        <%= nk_badge "Floating UI", size: :sm %> Placement of the dropdown
      <% end %>
      <%= t.attrs_prop(:span) %>
    <% end %>

    <%= render PropTable.new("tooltip.content(text = nil, **attrs) { ... }") do |t| %>
      <%= t.text_prop %>
      <%= t.attrs_prop(:div) %>
    <% end %>
  <% end %>
<% end %>
