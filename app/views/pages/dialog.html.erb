<%= component_page do %>
  <%= component_header do %>
    <%= title "Dialog" %>
    <%= lead "Modal schmodal" %>
    <%= render NuggetsComponent.new(%i[component js]) %>
  <% end %>

  <%= section do %>
    <%= section_title "Example" %>
    <%= example_file "dialog_basic" %>

    <%= inline_example do %>
      {%= nk_dialog do |d| %}
        {%= d.trigger "New post" %}
        {%= d.dialog do %}
          {%= d.title "New post" %}
          {%= d.description "Start off your new post ..." %}

          {%= nk_form_for ... do %}
            ...
          {% end %}

          {%= d.close_button %}
        {% end %}
      {% end %}
    <% end %>
  <% end %>

  <%= render "install_section", component_name: "dialog" %>
  <%= render "dependencies_section", component_name: "dialog" %>

  <%= section do %>
    <%= section_title "Usage" %>

    <%= render PropTable.new("nk_dialog(**attrs) { |dialog| ... }") do |t| %>
      <%= t.attrs_prop(:div) %>
    <% end %>

    <%= render PropTable.new("dialog.trigger(text = nil, **attrs) { ... }") do |t| %>
      <%= t.text_prop %>
      <%= t.attrs_prop(NitroKit::Button) %>
    <% end %>

    <%= render PropTable.new("dialog.dialog(**attrs) { ... }") do |t| %>
      <%= t.attrs_prop(:dialog) %>
    <% end %>

    <%= render PropTable.new("dialog.close_button(**attrs) { ... }") do |t| %>
      <%= t.attrs_prop(NitroKit::Button) %>
    <% end %>

    <%= render PropTable.new("dialog.title(text = nil, **attrs) { ... }") do |t| %>
      <%= t.text_prop %>
      <%= t.attrs_prop(:h2) %>
    <% end %>

    <%= render PropTable.new("dialog.description(text = nil, **attrs) { ... }") do |t| %>
      <%= t.text_prop %>
      <%= t.attrs_prop(:div) %>
    <% end %>
  <% end %>
<% end %>
