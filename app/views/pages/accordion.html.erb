<%= component_page do %>
  <%= component_header do %>
    <%= title "Accordion" %>
    <%= lead "When you want to say a lot but not all at once" %>
    <%= render NuggetsComponent.new(%i[component js]) %>
  <% end %>

  <%= section do %>
    <%= section_title "Example" %>

    <%= example_file("accordion_basic") %>

    <%= inline_example do %>
      {%= nk_accordion do |a| %}
        {%= a.item do %}
          {%= a.trigger "Item 1" %}
          {%= a.content do %}
            <p>Content</p>
          {% end %}
        {% end %}
        {%= a.item do %}
          {%= a.trigger "Item 2" %}
          {%= a.content do %}
            <p>Content</p>
          {% end %}
        {% end %}
      {% end %}
    <% end %>
  <% end %>

  <%= render "install_section", component_name: "accordion" %>

  <%= section do %>
    <%= render DependenciesComponent.new(NitroKit::SCHEMA.find(:accordion)) %>
  <% end %>

  <%= section do %>
    <%= section_title "Usage" %>

    <%= render PropTable.new("nk_accordion(**attrs) { |accordion| ... }") do |t| %>
      <%= t.attrs_prop(:div) %>
    <% end %>

    <%= render PropTable.new("accordion.item(**attrs) { ... }") do |t| %>
      <%= t.attrs_prop(:div) %>
    <% end %>

    <%= render PropTable.new("accordion.trigger(text = nil, **attrs) { ... }") do |t| %>
      <%= t.text_prop %>
      <%= t.attrs_prop(:button) %>
    <% end %>

    <%= render PropTable.new("accordion.content(text = nil, **attrs) { ... }") do |t| %>
      <%= t.text_prop %>
      <%= t.attrs_prop(:div) %>
    <% end %>
  <% end %>
<% end %>
