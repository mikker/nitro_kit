<%= component_page do %>
  <%= component_header do %>
    <%= title "Avatar" %>
    <%= lead "It's a face in a circle" %>
    <%= render NuggetsComponent.new(%i[component]) %>
  <% end %>

  <%= section do %>
    <%= section_title "Example" %>
    <%= example_file "avatar_basic" %>

    <%= inline_example do %>
      {%= nk_avatar "dhh-racer.jpg" %}
    <% end %>
  <% end %>

  <%= render "install_section", component_name: "avatar" %>

  <%= section do %>
    <%= section_title "Sizes" %>

    <%= example_file("avatar_sizes") %>
  <% end %>

  <%= section do %>
    <%= section_title "Usage" %>

    <%= render PropTable.new("nk_avatar(src = nil, size: :md, **attrs)") do |t| %>
      <%= t.prop(:src, "nil") do %>
        Uses <code>image_tag</code> internally.
      <% end %>
      <%= t.size_prop(%w[:sm :md :lg], default: :md) %>
      <%= t.attrs_prop(:div) %>
    <% end %>
  <% end %>
<% end %>
