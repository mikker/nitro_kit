<%= component_page do %>
  <%= component_header do %>
    <%= title "Tabs" %>
    <%= lead "Tabs" %>
    <%= render NuggetsComponent.new(%i[component js]) %>
  <% end %>

  <%= section do %>
    <%= section_title "Example" %>

    <%= example_file "tabs_basic" %>

    <%= inline_example do %>
      {%= nk_tabs(default: :general) do |t| %}
        {%= t.tabs do %}
          {%= t.tab(:general) { "Profile" } %}
          {%= t.tab(:billing) { "Billing" } %}
          {%= t.tab(:contact) { "Contact" } %}
        {% end %}
        {%= t.panel(:general) do %}
          <div>Hi I'm a general, at ease soldier</div>
        {% end %}
        {%= t.panel(:billing) do %}
          <div>Find that one receipt that your accountant asks for</div>
        {% end %}
        {%= t.panel(:contact) do %}
          <div>How we can contact you when we screw up</div>
        {% end %}
      {% end %}
    <% end %>
  <% end %>

  <%= render "install_section", component_name: "tabs" %>
  <%= render "dependencies_section", component_name: "tabs" %>

  <%= section do %>
    <%= section_title "Usage" %>

    <%= render PropTable.new("nk_tabs(default: nil, **attrs) { |tabs| ... }") do |t| %>
      <%= t.prop "default", "nil" do %>
        The initial tab to show.
      <% end %>
      <%= t.attrs_prop(:div) %>
    <% end %>

    <%= render PropTable.new("tabs.tabs(**attrs) { |tabs| ... }") do |t| %>
      <%= t.attrs_prop(:div) %>
    <% end %>

    <%= render PropTable.new("tabs.tab(key, text = nil, **attrs) { ... }") do |t| %>
      <%= t.prop "key" do %>
        <%= nk_badge "Required", size: :sm %> Unique identifier
      <% end %>
      <%= t.text_prop %>
      <%= t.attrs_prop(:button) %>
    <% end %>

    <%= render PropTable.new("tabs.panel(key, **attrs) { ... }") do |t| %>
      <%= t.prop "key" do %>
        <%= nk_badge "Required", size: :sm %> Unique identifier
      <% end %>
      <%= t.attrs_prop(:div) %>
    <% end %>
  <% end %>
<% end %>
