<%= component_page do %>
  <%= component_header do %>
    <%= title "Icon" %>
    <%= lead "Says more than a thousand words" %>
    <%= render NuggetsComponent.new(%i[component]) %>
    <p>Uses <a href="https://lucide.dev" class="underline text-primary-foreground">Lucide icons</a>.</p>
  <% end %>

  <%= section do %>
    <%= section_title "Example" %>
    <%= example_file "icon_basic" %>

    <%= inline_example do %>
      {%= nk_icon "car" %}
    <% end %>
  <% end %>

  <%= render "install_section", component_name: "icon" %>
  <%= render "dependencies_section", component_name: "icon" %>

  <%= section do %>
    <%= section_title "Sizes" %>
    <%= example_file("icon_sizes") %>
  <% end %>

  <%= section do %>
    <%= section_title "Usage" %>

    <%= render PropTable.new("nk_icon(**attrs) { |dropdown| ... }") do |t| %>
      <%= t.size_prop(%i[sm md lg]) %>
      <%= t.attrs_prop(:svg) %>
    <% end %>
  <% end %>
<% end %>
