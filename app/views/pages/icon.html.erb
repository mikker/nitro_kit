<%= component_page do %>
  <%= title "Icons" %>

  <div class="space-y-4">
    <p>Uses
      <a href="https://lucide.dev" class="underline text-primary-foreground">Lucide icons</a></p>
    <div class="flex flex-col gap-2">
      <div class="flex gap-2">
        <%= ik_icon "align-start-vertical" %>
        <%= ik_icon "image-play", class: "text-green-500" %>
        <%= ik_icon "popcorn", class: "text-red-400" %>
        <%= ik_icon "tractor" %>
      </div>
      <div class="flex">
        <% %w[size-2 size-3 size-4 size-5 size-6 size-7 size-8].reverse.each do |size| %>
          <%= ik_icon "heart", class: size %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
