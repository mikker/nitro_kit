<%= component_page do %>
  <%= title "Radio buttons" %>

  <%= section do %>
    <%= example do %>
      <div class="flex gap-2">
        <%= nk_radio_button :name, 1 %>
        <%= nk_radio_button :name, 2, checked: true %>
      </div>
    <% end %>

    <%= code_example(%{<%= nk_radio_button "name", "value" %\>}) %>

    <h2>Checkbox group</h2>

    <%= example do %>
      <%= nk_radio_group(:taste, value: :zero) do |g| %>
        <%= g.title "Choose your fate" %>
        <%= g.item :coke, label: "Coke" %>
        <%= g.item :zero, label: "Coke Zero" %>
      <% end %>
    <% end %>

    <%= code_example do %>
      {#= nk_radio_group :taste, value: :zero do |g| #}
        {#= g.title "Choose your poison" #}
        {#= g.item :coke, "Coke" #}
        {#= g.item :zero, "Coke Zero" #}
      {# end #}
    <% end %>
  <% end %>
<% end %>
