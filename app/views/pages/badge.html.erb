<%= component_page do %>
  <%= title "Badge" %>
  <%= lead "Badges are used to show how fancy you are. Gold ones are the best." %>

  <%= section do %>
    <%= section_title "Default variants" %>
    <%= example(class: "") do %>
      <%= ik_badge "Default" %>
      <%= ik_outline_badge { "Outline" } %>
    <% end %>

    <%= code_example %{
          <%= ik_badge "Default" %\>
          <%= ik_outline_badge { "Outline" } %\>
          } %>
  <% end %>

  <%= section do %>
    <%= section_title "Sizes" %>

    <%= example(class: "") do %>
      <%= ik_badge "Small", size: :sm %>
    <% end %>

    <%= code_example %{
          <%= ik_badge "Small", size: :sm %\>
          } %>
  <% end %>
<% end %>
