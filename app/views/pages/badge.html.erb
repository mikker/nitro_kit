<%= component_page do %>
  <%= component_header do %>
    <%= title "Badge" %>
    <%= lead "Badges show how important you are. Gold ones are the best." %>
    <%= render NuggetsComponent.new(%i[component]) %>
  <% end %>

  <%= section do %>
    <%= section_title "Example" %>
    <%= example_file "badge_basic" %>
    <%= inline_example do %>
      {%= nk_badge("Default") %}
    <% end %>
  <% end %>

  <%= render "install_section", component_name: "badge" %>

  <%= section do %>
    <%= section_title "Variants" %>

    <%= example_file "badge_variants" %>
    <p>
    <a href="/good_to_know#variants" class="link">Read more about variants</a>
    </p>

  <% end %>

  <%= section do %>
    <%= section_title "Sizes" %>
    <%= example_file("badge_sizes") %>
  <% end %>

  <%= section do %>
    <%= section_title "Usage" %>

    <%= render PropTable.new("nk_badge(text = nil, variant: :default, size: :md, **attrs)") do |t| %>
      <%= t.text_prop %>
      <%= t.variant_prop(NitroKit::Badge::VARIANTS) %>
      <%= t.size_prop(%i[sm md], default: :md) %>
      <%= t.attrs_prop(:span) %>
    <% end %>
  <% end %>
<% end %>
