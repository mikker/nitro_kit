<%= component_page do %>
  <%= component_header do %>
    <%= title "Badge" %>
    <%= lead "Badges are used to show how fancy you are. Gold ones are the best." %>
  <% end %>

  <%= section do %>
    <%= section_title "Default variants" %>
    <%= example(class: "") do %>
      <%= nk_badge "Default" %>
      <%= nk_outline_badge { "Outline" } %>
    <% end %>

    <%= code_example do %>
      {#= nk_badge "Default" #} {#= nk_outline_badge { "Outline" } #}
    <% end %>
  <% end %>

  <%= section do %>
    <%= section_title "Sizes" %>

    <%= example(class: "") do %>
      <%= nk_badge "Small", size: :sm %>
    <% end %>

    <%= code_example do %>
      {#= nk_badge "Small", size: :sm #}
    <% end %>
  <% end %>
<% end %>
