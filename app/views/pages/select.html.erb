<%= component_page do %>
  <%= component_header do %>
    <%= title "Select" %>
  <% end %>

  <%= section do %>
    <%= example do %>
      <%= nk_select(%w[one two three], value: "two") %>
    <% end %>

    <%= code_example do %>
      {#= nk_select(%w[one two three], value: "two") #}
    <% end %>
  <% end %>

  <%= section do %>
    <%= example do %>
      <%= nk_select(value: "3") do |s| %>
        <% 1.upto(5) do |i| %>
          <%= s.option(i.to_s) { "Option #{i}" } %>
        <% end %>
      <% end %>
    <% end %>

    <%= code_example do %>
      {#= nk_select(value: 3) do |s| #}
        {# 1.upto(5) do |i| #}
          {#= s.option(value: i) { "Option #{i}" } #}
        {# end #}
      {# end #}
    <% end %>
  <% end %>
<% end %>
